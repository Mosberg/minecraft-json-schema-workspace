{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minecraft.net/schemas/cat_variant.schema.json",
  "title": "Minecraft Cat Variant",
  "description": "Schema for cat variant JSON files in Minecraft 1.21.11",
  "type": "object",
  "properties": {
    "asset_id": {
      "type": "string",
      "description": "Resource location for the cat variant texture"
    },
    "spawn_conditions": {
      "type": "array",
      "description": "Spawn conditions for this cat variant",
      "items": {
        "type": "object",
        "properties": {
          "priority": { "type": "integer" },
          "condition": { "type": "object" }
        },
        "required": ["priority"]
      },
      "minItems": 1
    }
  },
  "required": ["asset_id", "spawn_conditions"]
}
