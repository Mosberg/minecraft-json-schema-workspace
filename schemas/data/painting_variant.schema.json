{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minecraft.net/schemas/painting_variant.schema.json",
  "title": "Minecraft Painting Variant",
  "description": "Schema for painting variant JSON files in Minecraft 1.21.11",
  "type": "object",
  "properties": {
    "asset_id": { "type": "string" },
    "author": {
      "type": "object",
      "properties": {
        "color": { "type": "string" },
        "translate": { "type": "string" }
      },
      "required": ["color", "translate"]
    },
    "height": { "type": "integer" },
    "title": {
      "type": "object",
      "properties": {
        "color": { "type": "string" },
        "translate": { "type": "string" }
      },
      "required": ["color", "translate"]
    },
    "width": { "type": "integer" }
  },
  "required": ["asset_id", "author", "height", "title", "width"]
}
