{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Mosberg/minecraft-json-schema-workspace/refs/heads/main/schemas/data/minecraft/chat_type.schema.json",
  "title": "Minecraft Chat Type",
  "description": "Schema for chat type JSON files in Minecraft 1.21.11",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "parameters": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "translation_key": { "type": "string" },
        "style": {
          "type": "object",
          "properties": {
            "color": { "type": "string" },
            "italic": { "type": "boolean" }
          }
        }
      },
      "required": ["parameters", "translation_key"]
    }
  },
  "additionalProperties": false
}
