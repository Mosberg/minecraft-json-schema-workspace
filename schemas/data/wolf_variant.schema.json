{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minecraft.net/schemas/wolf_variant.schema.json",
  "title": "Minecraft Wolf Variant",
  "description": "Schema for wolf variant JSON files in Minecraft 1.21.11",
  "type": "object",
  "properties": {
    "assets": {
      "type": "object",
      "properties": {
        "angry": { "type": "string" },
        "tame": { "type": "string" },
        "wild": { "type": "string" }
      },
      "required": ["angry", "tame", "wild"]
    },
    "spawn_conditions": {
      "type": "array",
      "description": "Spawn conditions for this wolf variant",
      "items": {
        "type": "object",
        "properties": {
          "priority": { "type": "integer" },
          "condition": { "type": "object" }
        },
        "required": ["priority"]
      },
      "minItems": 1
    }
  },
  "required": ["assets", "spawn_conditions"]
}
