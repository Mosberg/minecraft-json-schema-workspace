{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minecraft.net/schemas/dialog.schema.json",
  "title": "Minecraft Dialog",
  "description": "Schema for dialog JSON files in Minecraft 1.21.11",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Dialog type identifier"
    },
    "button_width": {
      "type": "integer",
      "description": "Width of dialog buttons"
    },
    "columns": {
      "type": "integer",
      "description": "Number of columns in the dialog"
    },
    "dialogs": {
      "type": "string",
      "description": "Dialog list resource location (optional, not present in all types)"
    },
    "exit_action": {
      "type": "object",
      "properties": {
        "label": {
          "type": "object",
          "properties": {
            "translate": { "type": "string" }
          },
          "required": ["translate"]
        },
        "width": { "type": "integer" }
      },
      "required": ["label", "width"]
    },
    "external_title": {
      "type": "object",
      "properties": {
        "translate": { "type": "string" }
      },
      "required": ["translate"]
    },
    "title": {
      "type": "object",
      "properties": {
        "translate": { "type": "string" }
      },
      "required": ["translate"]
    }
  },
  "required": ["type", "button_width", "columns", "exit_action", "external_title", "title"]
}
