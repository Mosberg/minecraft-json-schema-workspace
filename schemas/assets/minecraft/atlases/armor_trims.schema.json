{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "minecraft:schemas/assets/minecraft/atlases/armor_trims.schema.json",
  "title": "Atlas: armor_trims.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["sources"],
  "properties": {
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "palette_key", "permutations", "textures"],
        "properties": {
          "type": { "const": "minecraft:paletted_permutations" },
          "palette_key": { "type": "string", "minLength": 1 },
          "permutations": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": { "type": "string", "minLength": 1 }
          },
          "textures": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  }
}
