{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Mosberg/minecraft-json-schema-workspace/refs/heads/main/schemas/assets/minecraft/models/block/cross.schema.json",
  "title": "Minecraft Cross Model",
  "description": "Schema for cross block models (plants, flowers using X-shaped planes)",
  "type": "object",
  "required": ["parent"],
  "properties": {
    "parent": {
      "type": "string",
      "enum": [
        "minecraft:block/cross",
        "block/cross",
        "minecraft:block/tinted_cross",
        "block/tinted_cross"
      ],
      "description": "Cross or tinted_cross parent"
    },
    "textures": {
      "type": "object",
      "required": ["cross"],
      "properties": {
        "cross": {
          "type": "string",
          "description": "Texture for the cross planes",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "particle": {
          "type": "string",
          "description": "Particle texture (defaults to #cross)"
        }
      }
    }
  }
}
