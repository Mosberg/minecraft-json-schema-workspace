{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minecraft.net/schemas/models/block/button.schema.json",
  "title": "Minecraft Button Model",
  "description": "Schema for button block models",
  "type": "object",
  "required": ["parent"],
  "properties": {
    "parent": {
      "type": "string",
      "enum": [
        "minecraft:block/button",
        "block/button",
        "minecraft:block/button_pressed",
        "block/button_pressed",
        "minecraft:block/button_inventory",
        "block/button_inventory"
      ],
      "description": "Button variant parent"
    },
    "textures": {
      "type": "object",
      "required": ["texture"],
      "properties": {
        "texture": {
          "type": "string",
          "description": "Button texture",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "particle": {
          "type": "string",
          "description": "Particle texture (defaults to #texture)"
        }
      }
    }
  }
}
