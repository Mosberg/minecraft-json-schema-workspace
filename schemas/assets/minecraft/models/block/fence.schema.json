{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minecraft.net/schemas/models/block/fence.schema.json",
  "title": "Minecraft Fence Model",
  "description": "Schema for fence block models",
  "type": "object",
  "required": ["parent"],
  "properties": {
    "parent": {
      "type": "string",
      "enum": [
        "minecraft:block/fence_post",
        "block/fence_post",
        "minecraft:block/fence_side",
        "block/fence_side",
        "minecraft:block/fence_inventory",
        "block/fence_inventory"
      ],
      "description": "Fence variant parent"
    },
    "textures": {
      "type": "object",
      "required": ["texture"],
      "properties": {
        "texture": {
          "type": "string",
          "description": "Fence texture",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "particle": {
          "type": "string",
          "description": "Particle texture (defaults to #texture)"
        }
      }
    }
  }
}
