{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Mosberg/minecraft-json-schema-workspace/refs/heads/main/schemas/assets/minecraft/models/block/cube_all.schema.json",
  "title": "Minecraft Cube All Model",
  "description": "Schema for cube_all block models (all sides use same texture)",
  "type": "object",
  "required": ["parent"],
  "properties": {
    "parent": {
      "type": "string",
      "enum": ["minecraft:block/cube_all", "block/cube_all"],
      "description": "Must be cube_all parent"
    },
    "textures": {
      "type": "object",
      "required": ["all"],
      "properties": {
        "all": {
          "type": "string",
          "description": "Texture for all sides (e.g., minecraft:block/stone)",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "particle": {
          "type": "string",
          "description": "Particle texture (defaults to #all)"
        }
      }
    }
  }
}
