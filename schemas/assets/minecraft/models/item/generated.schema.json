{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Mosberg/minecraft-json-schema-workspace/refs/heads/main/schemas/assets/minecraft/models/item/generated.schema.json",
  "title": "Minecraft Generated Item Model",
  "description": "Schema for generated item models (flat 2D items)",
  "type": "object",
  "required": ["parent"],
  "properties": {
    "parent": {
      "type": "string",
      "enum": ["minecraft:item/generated", "item/generated", "builtin/generated"],
      "description": "Must be item/generated parent"
    },
    "textures": {
      "type": "object",
      "properties": {
        "layer0": {
          "type": "string",
          "description": "Base layer texture",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "layer1": {
          "type": "string",
          "description": "Second layer texture (optional overlay)",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "layer2": {
          "type": "string",
          "description": "Third layer texture (optional overlay)",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "layer3": {
          "type": "string",
          "description": "Fourth layer texture (optional overlay)",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "layer4": {
          "type": "string",
          "description": "Fifth layer texture (optional overlay)",
          "pattern": "^(#[a-z_]+|[a-z0-9_.-]+:[a-z0-9/_.-]+)$"
        },
        "particle": {
          "type": "string",
          "description": "Particle texture (defaults to layer0)"
        }
      }
    },
    "display": {
      "type": "object",
      "description": "Display transformations for different contexts",
      "$ref": "https://raw.githubusercontent.com/Mosberg/minecraft-json-schema-workspace/refs/heads/main/schemas/assets/minecraft/models/item/model.schema.json#/definitions/displayTransform"
    },
    "overrides": {
      "type": "array",
      "description": "Model overrides based on item predicates",
      "items": {
        "type": "object",
        "required": ["predicate", "model"],
        "properties": {
          "predicate": {
            "type": "object"
          },
          "model": {
            "type": "string"
          }
        }
      }
    }
  }
}
