{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "minecraft:schemas/assets/minecraft/atlases.schema.json",
  "title": "Minecraft atlas JSON",
  "type": "object",
  "additionalProperties": false,
  "required": ["sources"],
  "properties": {
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/AtlasSource" }
    }
  },
  "$defs": {
    "NonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "ResourceLocationOrPath": {
      "type": "string",
      "minLength": 1
    },
    "AtlasSource": {
      "oneOf": [
        { "$ref": "#/$defs/SingleSource" },
        { "$ref": "#/$defs/DirectorySource" },
        { "$ref": "#/$defs/PalettedPermutationsSource" }
      ]
    },
    "SingleSource": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "resource"],
      "properties": {
        "type": { "const": "minecraft:single" },
        "resource": { "$ref": "#/$defs/ResourceLocationOrPath" }
      }
    },
    "DirectorySource": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "source", "prefix"],
      "properties": {
        "type": { "const": "minecraft:directory" },
        "source": { "$ref": "#/$defs/NonEmptyString" },
        "prefix": { "type": "string" }
      }
    },
    "PalettedPermutationsSource": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "palette_key", "permutations", "textures"],
      "properties": {
        "type": { "const": "minecraft:paletted_permutations" },
        "palette_key": { "$ref": "#/$defs/ResourceLocationOrPath" },
        "permutations": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "$ref": "#/$defs/ResourceLocationOrPath" }
        },
        "textures": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/ResourceLocationOrPath" }
        }
      }
    }
  }
}
