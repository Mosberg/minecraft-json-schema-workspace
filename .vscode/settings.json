{
  // Optional: keep VS Code from reaching out to SchemaStore if you want fully-offline behavior.
  // "json.schemaDownload.enable": false,

  "json.schemas": [
    // -----------------------------
    // Vanilla root JSON files (assets)
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/gpu_warnlist.json",
        "src/main/resources/assets/*/gpu_warnlist.json"
      ],
      "url": "./schemas/assets/minecraft/gpu_warnlist.schema.json"
    },
    {
      "fileMatch": [
        "resources/assets/minecraft/regional_compliancies.json",
        "src/main/resources/assets/*/regional_compliancies.json"
      ],
      "url": "./schemas/assets/minecraft/regional_compliancies.schema.json"
    },

    // -----------------------------
    // assets/minecraft/atlases
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/atlases/**/*.json",
        "src/main/resources/assets/*/atlases/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/atlases.schema.json"
    },

    // -----------------------------
    // assets/minecraft/blockstates
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/blockstates/**/*.json",
        "src/main/resources/assets/*/blockstates/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/blockstates.schema.json"
    },

    // -----------------------------
    // assets/minecraft/models
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/models/block/**/*.json",
        "src/main/resources/assets/*/models/block/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/models/block_models.schema.json"
    },
    {
      "fileMatch": [
        "resources/assets/minecraft/models/item/**/*.json",
        "src/main/resources/assets/*/models/item/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/models/item_models.schema.json"
    },
    {
      // Some packs place non-block/non-item models; keep a general fallback.
      "fileMatch": [
        "resources/assets/minecraft/models/**/*.json",
        "src/main/resources/assets/*/models/**/*.json",
        "!resources/assets/minecraft/models/block/**/*.json",
        "!resources/assets/minecraft/models/item/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/models/any_model.schema.json"
    },

    // -----------------------------
    // assets/minecraft/particles
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/particles/**/*.json",
        "src/main/resources/assets/*/particles/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/particles.schema.json"
    },

    // -----------------------------
    // assets/minecraft/post_effect
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/post_effect/**/*.json",
        "src/main/resources/assets/*/post_effect/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/post_effect.schema.json"
    },

    // -----------------------------
    // assets/minecraft/font (providers)
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/font/**/*.json",
        "src/main/resources/assets/*/font/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/font.schema.json"
    },

    // -----------------------------
    // assets/minecraft/items (item definitions)
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/items/**/*.json",
        "src/main/resources/assets/*/items/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/items.schema.json"
    },

    // -----------------------------
    // assets/minecraft/equipment
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/equipment/**/*.json",
        "src/main/resources/assets/*/equipment/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/equipment.schema.json"
    },

    // -----------------------------
    // assets/minecraft/lang (language json)
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/lang/**/*.json",
        "src/main/resources/assets/*/lang/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/lang.schema.json"
    },

    // -----------------------------
    // assets/minecraft/shaders (json only)
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/shaders/**/*.json",
        "src/main/resources/assets/*/shaders/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/shaders.schema.json"
    },

    // -----------------------------
    // assets/minecraft/texts (json only)
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/texts/**/*.json",
        "src/main/resources/assets/*/texts/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/texts.schema.json"
    },

    // -----------------------------
    // assets/minecraft/waypoint_style
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/minecraft/waypoint_style/**/*.json",
        "src/main/resources/assets/*/waypoint_style/**/*.json"
      ],
      "url": "./schemas/assets/minecraft/waypoint_style.schema.json"
    },

    // -----------------------------
    // Pack metadata (resource packs / data packs)
    // -----------------------------
    {
      "fileMatch": ["resources/**/pack.mcmeta", "src/main/resources/**/pack.mcmeta"],
      "url": "./schemas/pack/pack_mcmeta.schema.json"
    },

    // =========================================================================
    // DATA (data pack JSON)
    // =========================================================================

    // -----------------------------
    // data/*/tags (blocks/items/fluids/functions/etc)
    // -----------------------------
    {
      "fileMatch": ["resources/data/*/tags/**/*.json", "src/main/resources/data/*/tags/**/*.json"],
      "url": "./schemas/data/tags.schema.json"
    },

    // -----------------------------
    // Recipes, advancements, loot tables, predicates
    // -----------------------------
    {
      "fileMatch": [
        "resources/data/*/recipes/**/*.json",
        "src/main/resources/data/*/recipes/**/*.json"
      ],
      "url": "./schemas/data/recipes.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/advancements/**/*.json",
        "src/main/resources/data/*/advancements/**/*.json"
      ],
      "url": "./schemas/data/advancements.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/loot_table/**/*.json",
        "src/main/resources/data/*/loot_table/**/*.json"
      ],
      "url": "./schemas/data/loot_table.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/predicates/**/*.json",
        "src/main/resources/data/*/predicates/**/*.json"
      ],
      "url": "./schemas/data/predicates.schema.json"
    },

    // -----------------------------
    // Chat / damage / dimension / etc (top-level registries)
    // -----------------------------
    {
      "fileMatch": [
        "resources/data/*/chat_type/**/*.json",
        "src/main/resources/data/*/chat_type/**/*.json"
      ],
      "url": "./schemas/data/chat_type.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/damage_type/**/*.json",
        "src/main/resources/data/*/damage_type/**/*.json"
      ],
      "url": "./schemas/data/damage_type.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/dimension/**/*.json",
        "src/main/resources/data/*/dimension/**/*.json"
      ],
      "url": "./schemas/data/dimension.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/dimension_type/**/*.json",
        "src/main/resources/data/*/dimension_type/**/*.json"
      ],
      "url": "./schemas/data/dimension_type.schema.json"
    },

    // -----------------------------
    // Enchantments / providers / trim patterns / jukebox songs (common registries)
    // -----------------------------
    {
      "fileMatch": [
        "resources/data/*/enchantment/**/*.json",
        "src/main/resources/data/*/enchantment/**/*.json"
      ],
      "url": "./schemas/data/enchantment.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/enchantment_provider/**/*.json",
        "src/main/resources/data/*/enchantment_provider/**/*.json"
      ],
      "url": "./schemas/data/enchantment_provider.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/trim_pattern/**/*.json",
        "src/main/resources/data/*/trim_pattern/**/*.json"
      ],
      "url": "./schemas/data/trim_pattern.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/jukebox_song/**/*.json",
        "src/main/resources/data/*/jukebox_song/**/*.json"
      ],
      "url": "./schemas/data/jukebox_song.schema.json"
    },

    // -----------------------------
    // Worldgen (big one): keep split by subfolder so schemas stay manageable
    // -----------------------------
    {
      "fileMatch": [
        "resources/data/*/worldgen/biome/**/*.json",
        "src/main/resources/data/*/worldgen/biome/**/*.json"
      ],
      "url": "./schemas/data/worldgen/biome.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/configured_feature/**/*.json",
        "src/main/resources/data/*/worldgen/configured_feature/**/*.json"
      ],
      "url": "./schemas/data/worldgen/configured_feature.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/placed_feature/**/*.json",
        "src/main/resources/data/*/worldgen/placed_feature/**/*.json"
      ],
      "url": "./schemas/data/worldgen/placed_feature.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/configured_carver/**/*.json",
        "src/main/resources/data/*/worldgen/configured_carver/**/*.json"
      ],
      "url": "./schemas/data/worldgen/configured_carver.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/noise/**/*.json",
        "src/main/resources/data/*/worldgen/noise/**/*.json"
      ],
      "url": "./schemas/data/worldgen/noise.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/noise_settings/**/*.json",
        "src/main/resources/data/*/worldgen/noise_settings/**/*.json"
      ],
      "url": "./schemas/data/worldgen/noise_settings.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/density_function/**/*.json",
        "src/main/resources/data/*/worldgen/density_function/**/*.json"
      ],
      "url": "./schemas/data/worldgen/density_function.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/processor_list/**/*.json",
        "src/main/resources/data/*/worldgen/processor_list/**/*.json"
      ],
      "url": "./schemas/data/worldgen/processor_list.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/template_pool/**/*.json",
        "src/main/resources/data/*/worldgen/template_pool/**/*.json"
      ],
      "url": "./schemas/data/worldgen/template_pool.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/structure/**/*.json",
        "src/main/resources/data/*/worldgen/structure/**/*.json"
      ],
      "url": "./schemas/data/worldgen/structure.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/structure_set/**/*.json",
        "src/main/resources/data/*/worldgen/structure_set/**/*.json"
      ],
      "url": "./schemas/data/worldgen/structure_set.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/flat_level_generator_preset/**/*.json",
        "src/main/resources/data/*/worldgen/flat_level_generator_preset/**/*.json"
      ],
      "url": "./schemas/data/worldgen/flat_level_generator_preset.schema.json"
    },
    {
      "fileMatch": [
        "resources/data/*/worldgen/multi_noise_biome_source_parameter_list/**/*.json",
        "src/main/resources/data/*/worldgen/multi_noise_biome_source_parameter_list/**/*.json"
      ],
      "url": "./schemas/data/worldgen/multi_noise_biome_source_parameter_list.schema.json"
    },

    // -----------------------------
    // Structure-related (non-worldgen folder)
    // -----------------------------
    {
      "fileMatch": [
        "resources/data/*/structures/**/*.json",
        "src/main/resources/data/*/structures/**/*.json"
      ],
      "url": "./schemas/data/structures.schema.json"
    },

    // -----------------------------
    // Fallback: any remaining data JSON not covered above
    // (Useful while youâ€™re still filling coverage.)
    // -----------------------------
    {
      "fileMatch": [
        "resources/data/*/**/*.json",
        "src/main/resources/data/*/**/*.json",

        // Exclusions so the fallback does not override more specific associations
        "!resources/data/*/tags/**/*.json",
        "!resources/data/*/recipes/**/*.json",
        "!resources/data/*/advancements/**/*.json",
        "!resources/data/*/loot_table/**/*.json",
        "!resources/data/*/predicates/**/*.json",
        "!resources/data/*/worldgen/**/*.json",
        "!resources/data/*/dimension/**/*.json",
        "!resources/data/*/dimension_type/**/*.json",
        "!resources/data/*/chat_type/**/*.json",
        "!resources/data/*/damage_type/**/*.json",
        "!resources/data/*/enchantment/**/*.json",
        "!resources/data/*/enchantment_provider/**/*.json",
        "!resources/data/*/trim_pattern/**/*.json",
        "!resources/data/*/jukebox_song/**/*.json"
      ],
      "url": "./schemas/data/any_data_json.schema.json"
    },

    // -----------------------------
    // Fallback: any remaining asset JSON not covered above
    // -----------------------------
    {
      "fileMatch": [
        "resources/assets/*/**/*.json",
        "src/main/resources/assets/*/**/*.json",

        "!resources/assets/*/atlases/**/*.json",
        "!resources/assets/*/blockstates/**/*.json",
        "!resources/assets/*/models/**/*.json",
        "!resources/assets/*/particles/**/*.json",
        "!resources/assets/*/post_effect/**/*.json",
        "!resources/assets/*/font/**/*.json",
        "!resources/assets/*/items/**/*.json",
        "!resources/assets/*/equipment/**/*.json",
        "!resources/assets/*/lang/**/*.json",
        "!resources/assets/*/shaders/**/*.json",
        "!resources/assets/*/texts/**/*.json",
        "!resources/assets/*/waypoint_style/**/*.json"
      ],
      "url": "./schemas/assets/any_asset_json.schema.json"
    }
  ]
}
